@model List<MVC_CRUD.Models.ViewModels.ListTablaViewModel>
@{
    ViewBag.Title = "Index";
}

<h2>@ViewBag.Title</h2>

<div class="row" style="text-align:'right';padding:'5px';">
    <a href="/miTabla/Nuevo" class="btn btn-primary">Nuevo</a>
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Correo</th>
               

            </tr>
            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.Id</td>
                    <td>@oElemento.Nombre</td>
                    <td>@oElemento.Correo</td>

                </tr>

            }


        </table>

    </div>

</div>